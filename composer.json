{
    "name": "sun-asterisk/chatwork-php",
    "description": "Chatwork API PHP client library",
    "type": "library",
    "require": {
        "php": ">=7.0",
        "guzzlehttp/guzzle": "^6.3"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "phpunit/phpunit": "^8.2",
        "symfony/var-dumper": "^5.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SunAsterisk\\Chatwork\\": "src/",
            "Acme\\": "example/src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
